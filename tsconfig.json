{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "experimentalDecorators": true,
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false,
        "jsx": "react",
        "strict": true,
    },
    "include": [
        "./src/**/*"
    ]
}